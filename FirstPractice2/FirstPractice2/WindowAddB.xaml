<Window x:Class="FirstPractice2.WindowAddB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstPractice2"
        mc:Ignorable="d"
            Title="WindowAddB" Height="350" Width="500">
    <Grid>
        <DataGrid x:Name="Authors" Visibility="Hidden"/>
        <DataGrid x:Name="Books" Visibility="Hidden"/>
        <StackPanel>
            <TextBox Margin="15" Name="Tittle" Text="Введите название книги"></TextBox>
            <TextBox Margin="15" Name="Genre" Text="Введите жанр книги"></TextBox>
            <TextBox Margin="15" Name="PublicationYear" Text="Введите год публикации"></TextBox>
            <TextBox Margin="15" Name="AvailabilityOfBook" Text="Введите, доступна ли книга"></TextBox>
            <ComboBox Margin="15" Name="Author"></ComboBox>
            <Button Content="Добавить новою книгу" Click="Add" Height="20" Width="350"></Button>
        </StackPanel>
    </Grid>
</Window>
