<Window x:Class="FirstPractice2.WindowAddA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstPractice1"
        mc:Ignorable="d"
        Title="WindowAddA" Height="350" Width="500">
    <Grid>
        <DataGrid x:Name="Authors" Visibility="Hidden"/>
        <StackPanel>
            <TextBox Margin="15" Name="AuthorSurName" Text="Введите фамилия автора"></TextBox>
            <TextBox Margin="15" Name="AuthorName" Text="Введите имя автора"></TextBox>
            <TextBox Margin="15" Name="AuthorMiddleName" Text="Введите отчество автора"></TextBox>
            <TextBox Margin="15" Name="AuthorBirth" Text="Введите дату рождения автора"></TextBox>
            <TextBox Margin="15" Name="AuthorDeath" Text="Введите дату смерти автора"></TextBox>
            <Button Content="Добавить нового автора" Click="Add" Height="20" Width="350"></Button>
        </StackPanel>
    </Grid>
</Window>
