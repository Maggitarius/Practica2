<Page x:Class="FirstPractice1.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FirstPractice1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">
    <Grid>
        <DataGrid x:Name="biba"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,385,0,0">
            <TextBox x:Name="NewTittle" Text="Введите нов.название"></TextBox>
            <TextBox x:Name="NewGenre" Text="Введите нов.жанр"></TextBox>
            <TextBox x:Name="NewPublishingYear" Text="Введите нов.дата публикацию"></TextBox>
            <TextBox x:Name="NewAvailability" Text="Введите, доступна ли книга"></TextBox>
            <ComboBox x:Name="Author" Height="32" Width="44"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Добавить" Margin="5" Click="Add_Click"/>
            <Button Content="Изменить" Margin="5" Click="Update_Click"/>
            <Button Content="Удалить" Margin="5" Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</Page>

